extends ../layout

block content
    .container
        h1 Categories
        <button type="submit" class="btn btn-default"><a href="/categories/newcategory">Add Category</a></button>

    .container.category-list
        if categories
            ul.list-group
                each type in categories
                    li.list-group-item
                        a(href='/categories/#{type.title}')
                            !=type.title
                        span.catedit
                            a(href='#') Delete
                        span.catedit
                            a(href='#') Edit
                        span.badge
                            !=23
                        