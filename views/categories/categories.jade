extends ../layout

block content
    .container
        h1 Categories
        <button type="submit" class="btn btn-default"><a href="/categories/newcategory">Add Category</a></button>

    .container.category-list
        .row
            .col-md-8
                if categories
                    ul.list-group
                        each type in categories
                            li.list-group-item
                                a(href='/categories/#{type.title}', class='name-category')
                                    !=type.title
                                span.catedit
                                    a(href='#', class='delete-category') Delete
                                span.catedit
                                    a(href='#', class='edit-category') Edit
                                span.badge
                                    !=23
    