extends ../layout

block content
    .container
        h1 Members Area
        p Welcome to members area

        <button type="submit" class="btn btn-default"><a href="/posts/newpost">Add Post</a></button>
        

    .container
        .row
            .col-md-8
                if posts
                    each post in posts
                        .post
                            h1 
                                a(href='/posts/#{post.title}') #{post.title}
                            p.post-details
                                i.fa.fa-user   
                                    !=post.author
                                i.fa.fa-clock-o   
                                    !=formatDate(post.date)
                                i.fa.fa-folder
                                    a(href='/categories/#{post.category}')   #{post.category}
                            .postimage
                                a(href='/posts/#{post.title}')
                                    img(src='/images/uploads/#{post.postimage}')
