extends ../layout

block content
  h1 Create New Post
  br
  form(method='post', action='/posts/newpost')
    .form-group
        label Title
        input.form-control(name='title', type='text', required)
    .form-group
        label Category
        select.form-control(name='category')
          each category in categories
            option #{category.title}
    .form-group
        label Image
        input.form-control(name='postimage', type='file')
    .form-group
        label Content
        textarea.form-control(name='content', type='text', id='text-body' required)
    <button type="submit" class="btn btn-default">Create</button>

    script(src='/ckeditor/ckeditor.js')
    script
      | CKEDITOR.replace('text-body')