extends ../layout

block content
  h1 Create New Post
  p Please login for access
  form(method='post', action='/posts/new')
    .form-group
        label Title
        input.form-control(name='title', type='text', required)
    .form-group
        label Content
        textarea.form-control(name='content', type='text', required)
    <button type="submit" class="btn btn-default">Create</button>