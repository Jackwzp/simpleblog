extends layout

block content
    .container
        .row
            .col-md-8.col-md-offset-2
                h1 Latest Stories
                br
                <button type="submit" class="btn btn-default"><a href="/posts/newpost">Add Your Post</a></button>
        

    .container
        .row
            .col-md-8.col-md-offset-2
                if posts
                    each post in posts
                        .post
                            h1 
                                a(href=PostSlug.get(post)) #{post.title}
                                
                            p.post-details
                                i.fa.fa-user   
                                    !=post.author
                                i.fa.fa-clock-o   
                                    !=formatDate(post.date)
                                i.fa.fa-folder
                                    a(href=CategorySlug.get(post.category))   #{post.category}
                            .postimage
                                a(href=PostSlug.get(post))
                                    img(src='/images/uploads/#{post.postimage}')
